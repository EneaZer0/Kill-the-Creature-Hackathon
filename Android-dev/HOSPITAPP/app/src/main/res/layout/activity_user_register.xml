<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="32dp"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:"
            android:textSize="18sp"
            >

        </TextView>

        <EditText
            android:id="@+id/nameRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginLeft="20dp"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/password-text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:text="Password:"
            android:textSize="18sp"
            >

        </TextView>

        <EditText
            android:id="@+id/passwordRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Enter your new password"
            android:inputType="textPassword"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatpswLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >

        <EditText
            android:id="@+id/checkPasswordRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Repeat your new password"
            android:inputType="textPassword"
            >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginRight="19dp"
            android:textSize="18sp"
            >

        </TextView>


        <EditText
            android:id="@+id/emailRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/direction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginRight="19dp"
            android:textSize="18sp">

        </TextView>

        <EditText
            android:id="@+id/nameHospitalRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Hospital name"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/nameStreetRegistered"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:hint="Hospital's address">

        </EditText>

        <EditText
            android:id="@+id/numberStreetRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:inputType="number">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zip_city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/CPRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Postal code"
            android:layout_marginRight="110dp"
            android:inputType="number"
            >

        </EditText>

        <EditText
            android:id="@+id/cityRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="City or region"
            >

        </EditText>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/telephoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/telephone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone:"
            android:layout_marginRight="19dp"
            android:textSize="18sp"
            >

        </TextView>


        <EditText
            android:id="@+id/telephoneRegistered"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/saveUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Register profile "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_telephoneAdded"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/singInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:layout_marginLeft="50dp"
            >

        </Button>

    </LinearLayout>


</LinearLayout>