<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/select_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:id="@+id/select_text"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/selecione_su_pedido"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <Spinner
                android:id="@+id/objectInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_horizontal">
                <!---android:hint="@string/material"
                android:inputType="text"
                android:importantForAutofill="no"-->

            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/VolumeNumber"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/num_unidades"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/inputVN"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:hint="@string/numero"
                android:autofillHints=""
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/Direccion_de_envio"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/mantener_direccion_de_envio"
                android:textSize="16sp"
                />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:id="@+id/provider_text_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/nombre_de_hospital"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/nameProviderEdited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:hint="@string/name"
                android:textAlignment="center"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:id="@+id/direction_provider_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Hospital address:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/nameStreetEdited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Street"
                android:layout_marginStart="20dp"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/codigo_postal_text_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/c_digo_postal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/CPEdited"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="PC"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginStart="60dp"
                >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/street_number_text_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Street number:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/streetNumberEdited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:layout_marginStart="60dp"

                android:inputType="number"
                >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/city_province_text_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="City or region"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >
            </TextView>

            <EditText
                android:id="@+id/cityEdited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="City or region"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/email_text_ed"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                >

            </TextView>

            <EditText
                android:id="@+id/emailEdited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                >
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:id="@+id/telephone_text_edit"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Telephone number:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="number"
                android:textAlignment="center"
                >

            </TextView>

            <EditText
                android:id="@+id/telephoneEdited"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Telephone"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                >

            </EditText>

        </LinearLayout>

    </LinearLayout>

</ScrollView>