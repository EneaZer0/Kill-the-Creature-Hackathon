<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ObjectNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/ObjectNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre"

            android:textSize="20sp"
            android:layout_marginRight="100dp"
            >

        </TextView>

        <TextView
            android:id="@+id/StateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textSize="16sp"

            android:layout_marginLeft="50dp"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/VolumeNumberLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ObjectNameLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                >

            </TextView>





            <TextView
                android:id="@+id/textVN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unities"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginRight="10dp"

                >

            </TextView>



        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/fechaNumberItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"

            >
        </TextView>

        <TextView
            android:id="@+id/VolumeNumberItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numero_de_unidades"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginRight="0dp"
            >

        </TextView>

    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/ReferenceIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/referenceid"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                >

            </TextView>

            <TextView
                android:id="@+id/ReferenceIdNumItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                >

            </TextView>

            <TextView
                android:id="@+id/proveedorId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proveedor:"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                >

            </TextView>

            <TextView
                android:id="@+id/proveedorNumItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not assigned"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="260dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"

                >

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>